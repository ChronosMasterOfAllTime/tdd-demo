{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@test/*": [
                "test/*"
            ]
        },
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.spec.ts",
    ]
}
